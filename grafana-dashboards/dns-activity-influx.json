{
  "dashboard": {
    "title": "DNS Activity (Time-Aware)",
    "tags": ["dns", "influxdb", "time-aware"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Top Domains Accessed",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "influxdb", "uid": "influxdb"},
            "query": "from(bucket: \"network\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"dns_query\")\n  |> group(columns: [\"domain\"])\n  |> count()\n  |> sort(columns: [\"_value\"], desc: true)\n  |> limit(n: 15)"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Top DNS Query Clients",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "influxdb", "uid": "influxdb"},
            "query": "from(bucket: \"network\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"dns_query\")\n  |> group(columns: [\"device_name\"])\n  |> count()\n  |> sort(columns: [\"_value\"], desc: true)\n  |> limit(n: 10)"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 200}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Unique Domains Per Client",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "influxdb", "uid": "influxdb"},
            "query": "from(bucket: \"network\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"dns_query\")\n  |> group(columns: [\"device_name\"])\n  |> distinct(column: \"domain\")\n  |> count()\n  |> sort(columns: [\"_value\"], desc: true)\n  |> limit(n: 10)"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "DNS Query Rate Over Time",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "influxdb", "uid": "influxdb"},
            "query": "from(bucket: \"network\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"dns_query\")\n  |> aggregateWindow(every: v.windowPeriod, fn: count, createEmpty: false)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "short"
          }
        }
      }
    ],
    "schemaVersion": 38
  },
  "overwrite": true
}
